{
  "builders": [
    {
      "snapshot_name": "web_base_image_{{timestamp}}",
      "type": "digitalocean",
      "image": "ubuntu-16-04-x64",
      "region": "nyc3",
      "size": "512mb",
      "ssh_username": "root"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "scripts/bootstrap.sh"
    },
    {
      "type": "ansible-local",
      "playbook_file": "ansible/web.yml",
      "playbook_dir": "ansible/",
      "extra_arguments": "--diff",
      "clean_staging_directory": true
    }
  ]
}
